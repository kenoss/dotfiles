# bind w:shift;alt nudge +0   +10%


# Resize Bindings
bind r:${hyper}           resize +10% +0
bind l:${hyper}           resize -10% +0
bind up:${hyper}          resize +0   -10%
bind down:${hyper}        resize +0   +10%
bind r:${hyper};shift     resize -10% +0 bottom-right
bind l:${hyper};shift     resize +10% +0 bottom-right
bind up:${hyper};shift    resize +0   +10% bottom-right
bind down:${hyper};shift  resize +0   -10% bottom-right

