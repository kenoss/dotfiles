# Reload
bind r:ctrl;alt;cmd relaunch

# Hiper key
# alias hyper alt
alias hyper alt;cmd
# alias hyper ctrl;alt;cmd

# Abstract positions
alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias lefthalf  move screenOriginX-screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
alias righthalf move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
alias leftmore  move screenOriginX;screenOriginY               screenSizeX*3/4;screenSizeY
alias rightmore move screenOriginX+screenSizeX/4;screenOriginY screenSizeX*3/4;screenSizeY
alias seq-more chain ${leftmore} | ${rightmore}
# alias full-left-out  sequence ${full} | nudge -50% +0
# alias full-right-out sequence ${full} | nudge +50% +0
# alias seq-full    chain ${full} | ${full-left-out} | ${full-right-out}
alias seq-full    chain ${full} | nudge -50% +0 | nudge +100% +0
alias quad-leftout  sequence ${full} | nudge -75% +0
alias quad-rightout sequence ${full} | nudge +75% +0
alias quad-1 move screenOriginX+(screenSizeX/4)*0;screenOriginY screenSizeX/4;screenSizeY
alias quad-2 move screenOriginX+(screenSizeX/4)*1;screenOriginY screenSizeX/4;screenSizeY
alias quad-3 move screenOriginX+(screenSizeX/4)*2;screenOriginY screenSizeX/4;screenSizeY
alias quad-4 move screenOriginX+(screenSizeX/4)*3;screenOriginY screenSizeX/4;screenSizeY
alias seq-quad chain ${quad-1} | ${quad-2} | ${quad-3} | ${quad-4}
# alias seq-small  chain move screenOriginX;screenOriginY | nudge -50% +0 | nudge +100% +0 | nudge -125% +0 | nudge +150% +0
# alias seq-small  sequence push top | push left | nudge +80% +0
alias aux-small  sequence push top | push left | nudge +80% +0


bind f:${hyper}  ${seq-full}
bind q:${hyper}  ${seq-full}
bind f:${hyper};shift  ${seq-more}
bind ;:${hyper}  ${aux-small}
bind q:${hyper}  nudge -100 +100
bind m:${hyper};shift  ${lefthalf}
bind w:${hyper};shift  ${righthalf}

# bind b:${hyper} ${quad-leftout}
# bind v:${hyper} ${quad-rightout}
bind b:${hyper}  ${quad-1}
bind m:${hyper}  ${quad-2}
bind w:${hyper}  ${quad-3}
bind v:${hyper}  ${quad-4}
bind z:${hyper}  ${seq-quad}

# Focus Bindings
bind t:${hyper}  focus behind
bind h:${hyper}  focus behind
bind c:${hyper}  focus right
bind g:${hyper}  focus left

# Focus apps
bind u:${hyper}  focus "ターミナル"
bind e:${hyper}  focus "Emacs"
bind .:${hyper}  focus "Google Chrome"
bind p:${hyper}  focus "Firefox"
bind a:${hyper}  focus "Slack"

# bind u:${hyper} ${showNormalHint}
bind -:${hyper} ${showNormalHint}

# # Push Bindings
#bind c:alt       push right bar-resize:screenSizeX/3
#bind c:alt       nudge +50% +0
# bind m:alt       push up    bar-resize:screenSizeY/2
# bind w:alt       push down  bar-resize:screenSizeY/2

